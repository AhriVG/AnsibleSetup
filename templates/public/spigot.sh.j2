#!/bin/bash

java -server \
     -XX:+UseG1GC \
     -XX:MaxGCPauseMillis=500 \
     -XX:ParallelGCThreads=16 \
     -XX:+UseStringDeduplication \
     -XX:+UseCompressedOops \
     -XX:+UseAES \
     -XX:+UseAESIntrinsics \
     -Xmx{{ shard_mem }} -Xms{{ shard_mem }} \
     -XX:UseSSE=3 \
     -XX:+DisableExplicitGC \
     -XX:+UseNUMA \
     -Xloggc:"logs/gc.log" \
     -jar {{ server_jar }}.jar
